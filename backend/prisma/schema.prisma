generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
}
model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  password String
  posts Blog[]
}
model Blog {
 id Int @id @default(autoincrement())
 title String
 content String
 published Boolean @default(false)
 date DateTime @default(now())
 author User @relation(fields: [authorid], references: [id])
 authorid Int
}